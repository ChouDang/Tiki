generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model categories {
  id    String  @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name  String  @db.VarChar(255)
  foods foods[]
}

model foods {
  id            String       @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name          String       @db.VarChar(255)
  description   String?
  price         Decimal      @db.Decimal(10, 2)
  img           String?      @db.VarChar(255)
  stock         Int          @default(0)
  restaurant_id String?      @db.Uuid
  category_id   String?      @db.Uuid
  categories    categories?  @relation(fields: [category_id], references: [id], onUpdate: NoAction)
  restaurants   restaurants? @relation(fields: [restaurant_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  order_food    order_food[]
}

model order_food {
  order_id String @db.Uuid
  food_id  String @db.Uuid
  quantity Int
  foods    foods  @relation(fields: [food_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  orders   orders @relation(fields: [order_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@id([order_id, food_id])
}

model orders {
  id          String       @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  user_id     String?      @db.Uuid
  total_price Decimal      @db.Decimal(10, 2)
  order_date  DateTime     @default(now()) @db.Timestamp(6)
  order_food  order_food[]
  users       users?       @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model restaurants {
  id      String  @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name    String  @db.VarChar(255)
  address String?
  img     String
  foods   foods[]
}

model users {
  id          String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  firstname   String   @db.VarChar(255)
  lastname    String   @db.VarChar(255)
  username    String   @unique @db.VarChar(255)
  phonenumber String   @unique @db.VarChar(10)
  email       String   @unique @db.VarChar(255)
  password    String   @db.VarChar(255)
  orders      orders[]
}
